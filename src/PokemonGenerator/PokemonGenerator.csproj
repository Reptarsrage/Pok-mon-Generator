<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net47</TargetFramework>
    <StartupObject>PokemonGenerator.GUIProgram</StartupObject>
    <ApplicationIcon>Resources\favicon.ico</ApplicationIcon>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\sprites.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.6.2" />
    <PackageReference Include="CommandLineParser" Version="2.2.1" />
    <PackageReference Include="Dapper.ColumnMapper" Version="1.1.1" />
    <PackageReference Include="EntityFramework.SqlServerCompact" Version="6.2.0" />
    <PackageReference Include="Microsoft.SqlServer.Compact" Version="4.0.8876.1" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Windows.Forms" />
    <Reference Include="System.Configuration" />
  </ItemGroup>


  <ItemGroup>
    <Compile Update="Forms\PokemonGeneratorForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Forms\PokemonSettingsForm.cs">
      <SubType>Form</SubType>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <Compile Update="Forms\PokemonSettingsForm.Designer.cs">
      <DependentUpon>PokemonSettingsForm.cs</DependentUpon>
    </Compile>
    <Compile Update="Forms\PokemonGeneratorForm.Designer.cs">
      <DependentUpon>PokemonGeneratorForm.cs</DependentUpon>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Forms\PokemonSettingsForm.resx">
      <DependentUpon>PokemonSettingsForm.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\PokemonGeneratorForm.resx">
      <DependentUpon>PokemonGeneratorForm.cs</DependentUpon>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\banner.jpg" />
    <EmbeddedResource Include="Resources\pikagif.gif" />
    <EmbeddedResource Include="Resources\favicon.ico" />
    <EmbeddedResource Include="Resources\sprites.png" />
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <ItemGroup>
      <NativeBinariesx64 Include="$(SolutionDir)NativeBinaries\amd64\*.dll" />
      <NativeBinariesx86 Include="$(SolutionDir)NativeBinaries\x86\*.dll" />
      <SaveFiles Include="$(SolutionDir)*.sav" />
    </ItemGroup>

    <Copy SourceFiles="@(NativeBinariesx64)" DestinationFolder="$(OutputPath)amd64\" />
    <Copy SourceFiles="@(NativeBinariesx86)" DestinationFolder="$(OutputPath)x86\" />
    <Copy SourceFiles="$(SolutionDir)ThePokeBase.sdf" DestinationFolder="$(OutputPath)" />
    <Copy SourceFiles="@(SaveFiles)" DestinationFolder="$(OutputPath)" />
  </Target>

</Project>